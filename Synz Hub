print("üîÑ Carregando Synz Hub...")

-- Servi√ßos
local plr = game.Players.LocalPlayer
local rs = game:GetService("RunService")
local vim = game:GetService("VirtualInputManager")
local uis = game:GetService("UserInputService")

-- Vari√°veis
local coords = {
    ["1M"] = CFrame.new(4123, 984.9, -4139.4),
    ["5M"] = CFrame.new(-9015.1, 18.3, -6116.2),
    ["10M"] = CFrame.new(-7517, 4.3, 2898.3)
}

local lists = {
    ["1M"] = {{480,5},{1480,10},{2980,15},{4980,20},{7480,25},{10480,30}},
    ["5M"] = {{80,5},{220,8},{280,10},{580,15},{980,20},{1480,25}},
    ["10M"] = {{52,5},{208,10},{440,15},{748,20},{1132,25},{1592,30}}
}

local autoFarmEnabled = false
local selectedStone = "1M"
local selectedList = lists["1M"][1]
local farmConnection = nil
local currentSpeed = 16
local currentJump = 50
local speedEnabled = false
local jumpEnabled = false
local screenOverlay = nil
local speedConnection = nil
local jumpConnection = nil
local shiftLockEnabled = false
local ShiftLockScreenGui = nil
local ShiftLockButton = nil
local ShiftlockCursor = nil
local fpsCapEnabled = false
local FpsCapGui = nil
local FpsLabel = nil
local fpsConnection = nil

-- Fun√ß√£o de Auto Click
local function autoClick()
    pcall(function()
        vim:SendMouseButtonEvent(0,0,0,true,game,0)
        task.wait(0.05)
        vim:SendMouseButtonEvent(0,0,0,false,game,0)
    end)
end

-- Anti-AFK
plr.Idled:Connect(function()
    pcall(function()
        game:GetService("VirtualUser"):CaptureController()
        game:GetService("VirtualUser"):ClickButton2(Vector2.new())
    end)
end)

-- Carregar Library
local success, redzlib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/refs/heads/main/Redzhubui"))()
end)

if not success then
    warn("‚ùå Erro ao carregar Library!")
    return
end

local Window = redzlib:MakeWindow({
    Title = "Synz Hub | Muscle Legends",
    SubTitle = "By Anri - V1.3",
    SaveFolder = "SynzHub_ML"
})

Window:AddMinimizeButton({
    Button = { Image = "rbxassetid://71014873973869", BackgroundTransparency = 0 },
    Corner = { CornerRadius = UDim.new(35, 1) }
})

local Tab1 = Window:MakeTab({"Main", "cherry"})
local Tab2 = Window:MakeTab({"Beta", "star"})
local Tab3 = Window:MakeTab({"Settings", "settings"})

Tab1:AddDiscordInvite({
    Name = "Synz Hub",
    Description = "Join server",
    Logo = "rbxassetid://18751483361",
    Invite = "https://discord.gg/GBkxYzy4P"
})

Window:SelectTab(Tab1)

-- TAB 1 - MAIN
local Section = Tab1:AddSection({"Auto Farm System"})

Tab1:AddParagraph({"Como Usar", "1. Selecione a Pedra\n2. Escolha a Lista RB\n3. Ative o Auto Farm"})

Tab1:AddDropdown({
    Name = "Selecionar Pedra",
    Description = "Escolha qual pedra farmar",
    Options = {"1M", "5M", "10M"},
    Default = "1M",
    Flag = "stone_dropdown",
    Callback = function(Value)
        selectedStone = Value
        selectedList = lists[Value][1]
        print("‚úÖ Pedra selecionada: " .. Value)
    end
})

Tab1:AddDropdown({
    Name = "Lista de RB",
    Description = "Configura√ß√£o de farm",
    Options = {"1. 480 RB - 5s", "2. 1480 RB - 10s", "3. 2980 RB - 15s", "4. 4980 RB - 20s", "5. 7480 RB - 25s", "6. 10480 RB - 30s"},
    Default = "1. 480 RB - 5s",
    Flag = "list_dropdown",
    Callback = function(Value)
        local idx = tonumber(Value:match("(%d+)%."))
        if idx and lists[selectedStone][idx] then
            selectedList = lists[selectedStone][idx]
            print("‚úÖ Lista selecionada: " .. Value)
        end
    end
})

local Toggle1 = Tab1:AddToggle({
    Name = "Auto Farm",
    Description = "Ativa o farm autom√°tico",
    Default = false
})

Toggle1:Callback(function(Value)
    autoFarmEnabled = Value
    
    if Value then
        print("‚úÖ Auto Farm ATIVADO")
        farmConnection = rs.Heartbeat:Connect(function()
            if not autoFarmEnabled then return end
            pcall(function()
                local char = plr.Character
                if char and char:FindFirstChild("HumanoidRootPart") then
                    char.HumanoidRootPart.CFrame = coords[selectedStone]
                    autoClick()
                end
            end)
            task.wait(selectedList[2])
        end)
    else
        print("‚ùå Auto Farm DESATIVADO")
        if farmConnection then
            farmConnection:Disconnect()
            farmConnection = nil
        end
    end
end)

-- TAB 2 - BETA
