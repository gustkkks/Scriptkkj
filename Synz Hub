                screenOverlay = Instance.new("ScreenGui")
                screenOverlay.Name = "SynzOverlay"
                screenOverlay.ResetOnSpawn = false
                screenOverlay.IgnoreGuiInset = true
                
                local frame = Instance.new("Frame")
                frame.Size = UDim2.new(1,0,1,0)
                frame.Position = UDim2.new(0,0,0,0)
                frame.BorderSizePixel = 0
                frame.BackgroundColor3 = Color3.new(0,0,0)
                frame.ZIndex = 10
                frame.Parent = screenOverlay
                
                screenOverlay.Parent = plr:WaitForChild("PlayerGui")
            else
                screenOverlay.Enabled = true
                screenOverlay.Frame.BackgroundColor3 = Color3.new(0,0,0)
            end
        end)
        print("‚úÖ Black Screen ATIVADO")
    else
        pcall(function()
            if screenOverlay then
                screenOverlay.Enabled = false
            end
        end)
        print("‚ùå Black Screen DESATIVADO")
    end
end)

