Tab2:AddParagraph({"Aviso", "Recursos em teste - Use com cuidado!"})

Tab2:AddSlider({
    Name = "Velocidade",
    Min = 16,
    Max = 200,
    Increase = 1,
    Default = 16,
    Callback = function(Value)
        currentSpeed = Value
        print("‚ö° Velocidade ajustada: " .. Value)
    end
})

