local Toggle7 = Tab2:AddToggle({
    Name = "FPS Counter",
    Default = false
})

Toggle7:Callback(function(Value)
    fpsCapEnabled = Value
    
    if Value then
        pcall(function()
            -- Criar GUI do FPS Counter
            FpsCapGui = Instance.new("ScreenGui")
            FpsLabel = Instance.new("TextLabel")
            
            FpsCapGui.Name = "Synz FPS Counter"
            FpsCapGui.Parent = game:GetService("CoreGui")
            FpsCapGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
            FpsCapGui.ResetOnSpawn = false
            
            FpsLabel.Parent = FpsCapGui
            FpsLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
            FpsLabel.BackgroundTransparency = 0.5
            FpsLabel.BorderSizePixel = 0
            FpsLabel.Position = UDim2.new(0.01, 0, 0.01, 0)
            FpsLabel.Size = UDim2.new(0.08, 0, 0.05, 0)
            FpsLabel.Font = Enum.Font.GothamBold
            FpsLabel.Text = "FPS: 60"
            FpsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            FpsLabel.TextScaled = true
            FpsLabel.TextWrapped = true
            FpsLabel.TextXAlignment = Enum.TextXAlignment.Center
            FpsLabel.TextYAlignment = Enum.TextYAlignment.Center
            
            -- Sistema de contagem de FPS
            local lastTime = tick()
            local frameCount = 0
            
            fpsConnection = rs.RenderStepped:Connect(function()
                frameCount = frameCount + 1
                local currentTime = tick()
                
                if currentTime - lastTime >= 1 then
                    local fps = math.floor(frameCount / (currentTime - lastTime))
                    FpsLabel.Text = "FPS: " .. fps
                    
                    -- Mudar cor baseado no FPS
                    if fps >= 55 then
                        FpsLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
                    elseif fps >= 30 then
                        FpsLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
                    else
                        FpsLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
                    end
                    
                    frameCount = 0
                    lastTime = currentTime
                end
            end)
            
            -- Tornar arrast√°vel
            local dragging = false
            local dragInput, mousePos, framePos
            
            FpsLabel.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    dragging = true
                    mousePos = input.Position
                    framePos = FpsLabel.Position
                    
                    input.Changed:Connect(function()
                        if input.UserInputState == Enum.UserInputState.End then
                            dragging = false
                        end
                    end)
                end
            end)
            
            FpsLabel.InputChanged:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
                    dragInput = input
                end
            end)
            
            uis.InputChanged:Connect(function(input)
                if input == dragInput and dragging then
                    local delta = input.Position - mousePos
                    FpsLabel.Position = UDim2.new(
                        framePos.X.Scale,
                        framePos.X.Offset + delta.X,
                        framePos.Y.Scale,
                        framePos.Y.Offset + delta.Y
                    )
                end
            end)
            
            print("‚úÖ FPS Counter ATIVADO")
            print("üì± Arraste o contador para posicionar!")
        end)
    else
        pcall(function()
            if fpsConnection then
                fpsConnection:Disconnect()
                fpsConnection = nil
            end
            
            if FpsCapGui then
                FpsCapGui:Destroy()
                FpsCapGui = nil
                FpsLabel = nil
            end
        end)
        
        print("‚ùå FPS Counter DESATIVADO")
    end
end)

-- TAB 3 - SETTINGS
local Section3 = Tab3:AddSection({"Informa√ß√µes"})

Tab3:AddParagraph({"Synz Hub V1.3", "Criador: Anri\nJogo: Muscle Legends\nDiscord: discord.gg/GBkxYzy4P\n\n‚úÖ 100% Funcional:\n- Auto Farm\n- Speed/Jump\n- Shift Lock Mobile\n- Black/White Screen\n- FPS Counter"})

Tab3:AddButton({"Destruir GUI", function()
    pcall(function()
        local Dialog = Window:Dialog({
            Title = "Confirmar",
            Text = "Deseja destruir a GUI?",
            Options = {
                {"Sim", function()
                    pcall(function()
                        if farmConnection then farmConnection:Disconnect() end
                        if speedConnection then speedConnection:Disconnect() end
                        if jumpConnection then jumpConnection:Disconnect() end
                        if fpsConnection then fpsConnection:Disconnect() end
                        if screenOverlay then screenOverlay:Destroy() end
                        if ShiftLockScreenGui then ShiftLockScreenGui:Destroy() end
                        if FpsCapGui then FpsCapGui:Destroy() end
                        
                        local char = plr.Character
                        if char and char:FindFirstChild("Humanoid") then
                            char.Humanoid.WalkSpeed = 16
                            char.Humanoid.JumpPower = 50
                            char.Humanoid.AutoRotate = true
                        end
                        
                        redzl