    -- BotÃ£o INICIAR SPAM
    local spamButton = Instance.new("TextButton")
    spamButton.Name = "SpamButton"
    spamButton.Size = UDim2.new(0.42, 0, 0, 40)
    spamButton.Position = UDim2.new(0.05, 0, 0, 160)
    spamButton.BackgroundColor3 = Color3.new(0.2, 0.8, 0.2)
